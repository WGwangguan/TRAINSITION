<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LayoutActivity">

    <TextView
            android:id="@+id/text_with_scene"
            android:background="@android:color/holo_orange_dark"
            app:layout_constraintTop_toTopOf="parent"
            android:text="with scene"
            android:textSize="30sp"
            android:textColor="@android:color/white"
            android:gravity="center"
            app:layout_constraintBottom_toTopOf="@id/text_without_scene"
            android:layout_width="match_parent" android:layout_height="0dp"/>

    <TextView
            android:background="@android:color/holo_blue_dark"
            android:id="@+id/text_without_scene"
            android:text="without scene"
            android:textSize="30sp"
            android:textColor="@android:color/white"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/text_with_scene"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="match_parent" android:layout_height="0dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>